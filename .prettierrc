{
  "singleQuote": true,
  "trailingComma": "all",
  "printWidth": 120,
  "overrides": [
    { "files": "*.ts", "options": { "singleQuote": true } },
    {
      "files": "*.sol",
      "options": {
        "printWidth": 120,
        "tabWidth": 4,
        "singleQuote": false,
        "explicitTypes": "always"
      }
    }
  ],
  "plugins": ["prettier-plugin-solidity"]
}