{
  "name": "hardhat-project",
  "scripts": {
    "check-types": "tsc --incremental false --noEmit",
    "compile": "hardhat compile",
    "compile:watch": "hardhat watch compile",
    "test": "hardhat test",
    "test:watch": "hardhat watch test",
    "gas-report": "env REPORT_GAS=true npm run test",
    "coverage": "env COVERAGE=true hardhat coverage",
    "console": "hardhat console",
    "node:localhost": "hardhat node",
    "typechain": "hardhat typechain && prettier 'typechain-types/**/*.ts' --write",
    "contract:deploy": "hardhat run scripts/deploy.ts",
    "contract:mint": "hardhat run scripts/mint.ts",
    "verify:scan": "hardhat verify $CONTRACT_ADDR",
    "verify:sourcify": "hardhat sourcifySubmit --contract-name Veridca --source-name contracts/Veridca.sol --address $CONTRACT_ADDR --chain-id 137",
    "validate:output": "hardhat validateOutput",
    "export:abi": "hardhat export-abi",
    "lint:ts": "eslint '**/*.{js,ts}'",
    "lint:ts:fix": "eslint '**/*.{js,ts}' --fix",
    "lint:sol": "solhint '{contracts,test}/**/*.sol' && prettier -c '{contracts,test}/**/*.sol'",
    "lint:sol:fix": "solhint '{contracts,test}/**/*.sol' --fix && prettier --write '{contracts,test}/**/*.sol'",
    "format": "prettier '**/*.{js,ts,json,sol,md}' --check",
    "format:fix": "prettier '**/*.{js,ts,json,sol,md}' --write",
    "docs": "hardhat dodoc",
    "task": "hardhat --config tasks.config.ts",
    "commit": "cz"
  },
  "devDependencies": {
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-conventional": "17.1.0",
    "@nomicfoundation/hardhat-toolbox": "2.0.0",
    "@nomiclabs/hardhat-solhint": "2.0.1",
    "@openzeppelin/hardhat-upgrades": "1.21.0",
    "@primitivefi/hardhat-dodoc": "0.2.3",
    "@types/node": "18.7.23",
    "@types/prettyjson": "0.0.30",
    "@typescript-eslint/eslint-plugin": "5.38.1",
    "@typescript-eslint/parser": "5.38.1",
    "commitizen": "4.2.5",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.24.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-standard-with-typescript": "23.0.0",
    "eslint-import-resolver-typescript": "3.5.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-n": "15.3.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.0.1",
    "hardhat": "2.11.2",
    "hardhat-abi-exporter": "2.10.0",
    "hardhat-output-validator": "0.1.19",
    "hardhat-tracer": "1.1.0-rc.9",
    "hardhat-watcher": "2.5.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "prettier-plugin-solidity": "1.0.0-beta.24",
    "ts-node": "10.9.1",
    "typescript": "4.8.4"
  },
  "dependencies": {
    "@openzeppelin/contracts-upgradeable": "4.8.0-rc.1",
    "alchemy-sdk": "2.1.0",
    "date-fns": "2.29.3",
    "dotenv": "16.0.3",
    "erc721a-upgradeable": "4.2.2",
    "prettyjson": "1.2.5",
    "radash": "7.1.0",
    "solhint": "3.3.7",
    "table": "6.8.0",
    "zod": "3.19.1"
  },
  "engines": {
    "node": "^16.17.1",
    "npm": "^8.19.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "version": "1.0.0"
}
